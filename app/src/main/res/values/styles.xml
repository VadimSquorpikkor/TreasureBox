<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="nice_button" parent="Widget.AppCompat.Button">

<!--        <item name="colorControlHighlight">@color/colorAccent</item>-->
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:elevation">10dp</item>
        <item name="elevation">10dp</item>
        <item name="android:textColor">?attr/MyButtonText</item>
        <item name="android:background">@drawable/button_shape_selector</item>
    </style>



    <style name="dialogLinearEdit">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="elevation">6dp</item>
        <item name="background">@drawable/edit_text_field</item>
    </style>

    <style name="dialogLinearText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/main_orange</item>
    </style>

    <style name="itemDataText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/mygreen_light</item>
    </style>



</resources>