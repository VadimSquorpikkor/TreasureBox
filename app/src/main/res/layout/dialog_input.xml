<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            style="@style/dialogLinearText"
            android:text="Название"
            />

        <EditText
            android:id="@+id/name"
            style="@style/dialogLinearEdit"
            android:hint="Название"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            style="@style/dialogLinearText"
            android:text="email"
            />

        <EditText
            android:id="@+id/email"
            style="@style/dialogLinearEdit"
            android:hint="email"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            style="@style/dialogLinearText"
            android:text="Логин"
            />

        <EditText
            android:id="@+id/login"
            style="@style/dialogLinearEdit"
            android:hint="Логин"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            style="@style/dialogLinearText"
            android:text="Пароль"
            />

        <EditText
            android:id="@+id/pass"
            style="@style/dialogLinearEdit"
            android:hint="Пароль"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            style="@style/dialogLinearText"
            android:text="Категория"
            />

        <EditText
            android:id="@+id/cat"
            style="@style/dialogLinearEdit"
            android:hint="Категория"/>

    </LinearLayout>

    <EditText
        android:id="@+id/adds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Доп."/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add"/>

</LinearLayout>